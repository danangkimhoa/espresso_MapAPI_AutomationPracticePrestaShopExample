<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationBarBase">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@android:color/white</item>item>
    </style>

    <style name="NavigationBarButton" parent="NavigationBarBase">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textViewStyling" parent="Theme.Valori">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="title" parent="textViewStyling">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/valori_blue</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="subtitle" parent="textViewStyling">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/valori_gray</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!--Error label text style-->
    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_orange_light</item>
        <item name="colorButtonNormal">@color/valori_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>




</resources>
