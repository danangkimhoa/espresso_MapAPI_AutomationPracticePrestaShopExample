<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppInfoActivity"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sub_title"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info_sub_title"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sub_title"
                tools:context="com.example.prestashopwebview.AppInfoActivity" />

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/body_text"
                style="@style/textViewStyling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_info_body_text"
                app:layout_constraintTop_toBottomOf="@id/map" />

            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/subtitle"
                android:text="Contact Us"
                app:layout_constraintTop_toBottomOf="@id/body_text"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@android:style/TextAppearance.Small"
                app:layout_constraintTop_toBottomOf="@id/email_title"
                app:errorTextAppearance="@color/colorAccent"
                app:errorEnabled="true"
                style="@style/textViewStyling">

            <EditText
                android:id="@+id/email_text_box"
                android:inputType="textMultiLine"
                android:hint="Enter email message"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/submit_email"
                app:layout_constraintTop_toBottomOf="@id/email_input_layout"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <include
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/bottom_navigation_bar"
        layout="@layout/bottom_navigation_bar"
        app:layout_constraintTop_toBottomOf="@id/scrollview"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>